<%- include("header") -%>
<body class="text-center">
    <div class="box" id="heading">
        <h1 class="h1"><%=listType%></h1>
    </div>
    <div class="box p-2">
        <h2 class="h2 text-center mt-4 mb-4">To Do List:</h2>
            <%newListItems.forEach(function(item){%>
                <form action="/delete" method="post">
                    <div class="item">
                        <button type="submit" id="check-box" name="checkbox" value="<%=item._id%>">
                            <h6 class="h6" id="check-mark">âœ”</h6>
                        </button>
                        <input type="hidden" name="listPage" value="<%=listType%>">
                        <p><%=item.name%></p>
                    </div>
                </form>
            <%})%>
        <form class="item" action="/" method="post">
            <input type="text" name="userInputList" placeholder="New Item" autocomplete="off" autofocus>
            <button type="submit" name="listPage" value=<%=listType%>>+</button>
        </form>
    </div>
    
    <!-- Bootstrap jsDelivr -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    
    <!-- Custon script -->
    <script src="index.js"></script>
</body>

<%- include("footer") -%>